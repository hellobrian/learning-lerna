{
    "name": "learning-lerna",
    "version": "1.0.0",
    "description": "tutorial for setting up lerna",
    "main": "index.js",
    "scripts": {
        "test:watch": "jest --watchAll",
        "test": "jest",
        "build:storybook": "build-storybook -o public",
        "build:packages": "lerna run build",
        "prebuild": "lerna bootstrap",
        "build": "npm run build:packages && npm run build:storybook",
        "create": "hygen component new",
        "dev:storybook": "start-storybook -p 6006 --ci --quiet",
        "dev:watch": "lerna run watch",
        "dev": "npm-run-all --parallel dev:*",
        "lint": "eslint . --cache --fix"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "npm run lint",
            "git add"
        ],
        "**/*.{js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@storybook/addon-actions": "^5.2.5",
        "@storybook/addon-links": "^5.2.5",
        "@storybook/addons": "^5.2.5",
        "@storybook/react": "^5.2.5",
        "@types/jest": "^24.0.21",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.0.6",
        "bili": "^4.8.1",
        "chalk": "^2.4.2",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-plugin-compat": "^3.3.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": "^3.0.9",
        "hygen": "^5.0.1",
        "jest": "^24.9.0",
        "lerna": "^3.18.3",
        "lint-staged": "^9.4.2",
        "node-sass": "^4.13.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.18.2",
        "react": "^16.11.0",
        "react-dom": "^16.11.0"
    },
    "dependencies": {}
}
